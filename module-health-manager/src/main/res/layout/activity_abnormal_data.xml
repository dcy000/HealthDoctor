<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff8f8f8"
    android:orientation="vertical">

    <include
        android:id="@+id/tbToobar"
        layout="@layout/layout_common_toobar" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/shape_bg_title"
        app:tl_indicator_color="#3F86FC"
        app:tl_indicator_corner_radius="5pt"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="9pt"
        app:tl_indicator_width="40pt"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="#3F86FC"
        app:tl_textUnselectColor="#909399" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpConstractResident"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24pt" />
</LinearLayout>

