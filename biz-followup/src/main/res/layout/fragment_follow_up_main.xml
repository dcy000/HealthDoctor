<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FollowUpMainFragment">

    <FrameLayout
        android:id="@+id/flFollowUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlFollowUp">

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpFollowUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlFollowUp">

    </android.support.v4.view.ViewPager>

    <include layout="@layout/common_cl_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tlFollowUp"
        android:layout_width="0dp"
        android:layout_height="100pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clToolbar"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="#3F86FC"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="9pt"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#3F86FC"
        app:tabTextAppearance="@style/followup_tab_text_style"
        app:tabTextColor="#909399">

    </android.support.design.widget.TabLayout>
</android.support.constraint.ConstraintLayout>