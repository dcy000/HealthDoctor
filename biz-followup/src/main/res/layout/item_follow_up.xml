<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24pt"
    android:id="@+id/clFollowUp"
    app:cardBackgroundColor="#1468A1FF"
    app:cardCornerRadius="16pt"
    tools:background="#FFFFFF">

    <com.gzq.lib_resource.widget.ShadowLayout
        android:layout_width="702pt"
        android:layout_height="397pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow_layout_cornerRadius="16pt"
        app:shadow_layout_dx="0pt"
        app:shadow_layout_dy="4pt"
        app:shadow_layout_shadowColor="#1468A1FF"
        app:shadow_layout_shadowRadius="8pt">

        <View
            android:id="@+id/viewFg"
            android:layout_width="686pt"
            android:layout_height="381pt"
            android:background="@drawable/followup_fg" />
    </com.gzq.lib_resource.widget.ShadowLayout>

    <TextView
        android:id="@+id/tvFollowLabel"
        android:layout_width="462pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="44pt"
        android:maxLines="1"
        android:textSize="36pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="健康体检健康体检健康体检..." />

    <TextView
        android:id="@+id/tvFollowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32pt"
        android:maxLines="1"
        android:textSize="32pt"
        app:layout_constraintBottom_toBottomOf="@+id/tvFollowLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFollowLabel"
        tools:text="15:00" />

    <ImageView
        android:id="@+id/ivFollowAvatar"
        android:layout_width="60pt"
        android:layout_height="60pt"
        android:layout_marginTop="32pt"
        app:layout_constraintLeft_toLeftOf="@+id/tvFollowLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowLabel" />

    <TextView
        android:id="@+id/tvFollowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16pt"
        android:textColor="#303133"
        android:textSize="28pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivFollowAvatar"
        app:layout_constraintLeft_toRightOf="@+id/ivFollowAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivFollowAvatar"
        tools:text="李小大" />

    <TextView
        android:id="@+id/tvFollowTag"
        android:layout_width="wrap_content"
        android:layout_height="36pt"
        android:layout_marginLeft="16pt"
        android:background="@drawable/followup_bg_tag"
        android:gravity="center"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        android:textColor="#FF5D51"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivFollowAvatar"
        app:layout_constraintLeft_toRightOf="@+id/tvFollowName"
        app:layout_constraintTop_toTopOf="@+id/ivFollowAvatar"
        tools:text="硫化氢中毒" />

    <TextView
        android:id="@+id/tvFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32pt"
        android:textColor="#303133"
        android:textSize="28pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivFollowAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivFollowAvatar"
        tools:text="随访人：李四" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1pt"
        android:layout_marginLeft="32pt"
        android:layout_marginTop="92pt"
        android:layout_marginRight="32pt"
        android:background="#EEEEEE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFollowAvatar" />

    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32pt"
        android:textColor="#909399"
        android:textSize="28pt"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFollowAvatar"
        tools:text="创建人：张三 | 2018-06-18" />


    <TextView
        android:id="@+id/tvAction"
        android:layout_width="104pt"
        android:layout_height="56pt"
        android:layout_marginTop="32pt"
        android:layout_marginRight="32pt"
        android:background="@drawable/followup_bg_gray"
        android:gravity="center"
        android:text="查看"
        android:textColor="#909399"
        android:textSize="28pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line"
        tools:text="查看" />

</android.support.constraint.ConstraintLayout>