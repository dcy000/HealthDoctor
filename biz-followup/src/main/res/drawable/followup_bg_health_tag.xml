<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#ff3f86fc" android:startColor="#ff17b4ff" android:type="linear" android:useLevel="true" />
            <corners android:radius="40pt" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#ff3f86fc" android:startColor="#ff17b4ff" android:type="linear" android:useLevel="true" />
            <corners android:radius="40pt" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#ff3f86fc" android:startColor="#ff17b4ff" android:type="linear" android:useLevel="true" />
            <corners android:radius="40pt" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2pt" android:color="#ffc0c4cc" />
            <corners android:radius="40pt" />
        </shape>
    </item>
</selector>