<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffc0c4cc" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:endColor="#993f86fc" android:startColor="#9917b4ff" android:type="linear" android:useLevel="true" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:endColor="#ff3f86fc" android:startColor="#ff17b4ff" android:type="linear" android:useLevel="true" />
        </shape>
    </item>
</selector>